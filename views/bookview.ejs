<div class="card">
        <div class="card-body">
            <img src="https://covers.openlibrary.org/b/isbn/<%=bookdata.isbn %>-L.jpg" alt="cover picture for <%= bookdata.title %>" class="card-img-top" style="height: 225px; object-fit: contain;" >
        </div>
    </div>
<div class="container text-center">
    <div class="card">
        <div class="card-body">
            <div id="booktitle" class="display-4 text-success fw-bold"><%- bookdata.title %></div>
            <div class="fs-5">by</div>
            <div id="booktitle" class="display-5 text-success"><%- bookdata.author %></div>
            <div id="bookrating">Rating: <%- bookdata.rating %> / 10
                <div id="rating-display">
                <% var rat = parseInt(bookdata.rating);
                    var noofwholestars = Math.floor(rat/2);
                    var noofhalfstars = rat%2;
                    for (let i=1; i<=5; i++){
                       if (i <= noofwholestars){ %>
                        <i class="fas fa-star"></i>
                       <% } else if (noofhalfstars > 0) { %>
                        <i class="fas fa-star-half-alt"></i>
                        <% noofhalfstars = 0;
                       } else { %>
                        <i class="far fa-star"></i>
                      <%  }
                       } %>
                </div>
            
            </div>
            <div id="bookcontent" class="mt-5 fs-5"><%- bookdata.summary %></div>
        </div>
    </div>
</div>

